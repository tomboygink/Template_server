{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "ES6",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "../../public"
    },
    "include": ["src","src/.index.tsx"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}